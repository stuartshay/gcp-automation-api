# Production Environment Configuration for GCP Automation API

# Server Configuration
PORT=8080
ENVIRONMENT=production

# GCP Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# Swagger Configuration for Cloud Run Deployment
SWAGGER_HOST=gcp-automation-api-902997681858.us-central1.run.app
SWAGGER_SCHEME=https

# JWT Configuration
JWT_SECRET=your-production-jwt-secret-key
JWT_EXPIRATION_HOURS=24

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
ENABLE_GOOGLE_AUTH=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
ENABLE_DEBUG=false

# OAuth Configuration
OAUTH_TOKEN_URL=https://oauth2.googleapis.com/token
OAUTH_REDIRECT_URI=https://gcp-automation-api-902997681858.us-central1.run.app/callback
OAUTH_CALLBACK_PORT=8085

# Credentials Configuration
CREDENTIALS_DIR=.gcp-automation
CREDENTIALS_FILE=credentials.json
